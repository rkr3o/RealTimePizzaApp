<section class="login flex justify-center pt-20 ">
    <div class="w-full max-w-xs">
            <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" action="/register" method="POST">
            
              <div>
                <% if(messages.error){ %>
                  <span class="text-red-500 text-sm"><%=messages.error%></span>
                <%} %>
                <h1 class="text-xl md:text-2xl font-bold leading-tight mb-5">Register</h1>
                <div class="mb-2">
                    <label class="block text-gray-700 mb-2">Name</label>
                    <input name="name" value="<%=messages.name%>"
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="username" type="text" placeholder="Enter your name">
                </div>
                <div class="mb-2">
                    <label class="block text-gray-700 mb-2">Email Address</label>
                    <input name="email"value="<%=messages.email%>"
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="username" type="email" placeholder="Enter your email">
                </div>
                <div class="">
                    <label class="block text-gray-700 mb-2">Password</label>
                    <input name="password"
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
                        id="password" type="password" placeholder="******************">
                </div>
      
              <div class="text-right mt-1">
                <a href="/login" class="text-sm font-semibold text-gray-700 hover:text-blue-700 focus:text-blue-700">Already have account ?</a>
              </div>
      
              <button type="submit" class="w-full btn-primary text-white font-semibold rounded-lg
                    px-4 py-3 mt-2">Sign Up</button>
            </form>
      
            <hr class="my-2 border-gray-300 w-full">
      
            <button type="button" class=" w-full block bg-white hover:bg-gray-100 focus:bg-gray-100 text-gray-900 font-semibold rounded-lg px-4 py-3 border border-gray-300">
                  <div class="flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" class="w-6 h-6" viewBox="0 0 48 48"><defs><path id="a" d="M44.5 20H24v8.5h11.8C34.7 33.9 30.1 37 24 37c-7.2 0-13-5.8-13-13s5.8-13 13-13c3.1 0 5.9 1.1 8.1 2.9l6.4-6.4C34.6 4.1 29.6 2 24 2 11.8 2 2 11.8 2 24s9.8 22 22 22c11 0 21-8 21-22 0-1.3-.2-2.7-.5-4z"/></defs><clipPath id="b"><use xlink:href="#a" overflow="visible"/></clipPath><path clip-path="url(#b)" fill="#FBBC05" d="M0 37V11l17 13z"/><path clip-path="url(#b)" fill="#EA4335" d="M0 11l17 13 7-6.1L48 14V0H0z"/><path clip-path="url(#b)" fill="#34A853" d="M0 37l30-23 7.9 1L48 0v48H0z"/><path clip-path="url(#b)" fill="#4285F4" d="M48 48L17 24l-4-3 35-10z"/></svg>
                  <span class="ml-4">
                  Sign up
                  with
                  Google</span>
                  </div>
                </button>
          </div>
        </div>
      
    </div>
</section>